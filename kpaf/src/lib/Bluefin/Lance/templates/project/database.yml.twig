{{ dbName }}:
  comment: '新数据库'
  locale: zh_CN
  namespace: {{ dbName|pascal }}

  db:
    type: {{ dbType }}
    adapter: PDO_{{ dbType|const }}
    engine: {{ dbEngine }}
    charset: {{ dbCharset }}
    connection:
      host: {{ dbHost }}
      port: {{ dbPort }}
      username: {{ dbUser }}
      password: {{ dbPass }}
      dbname: {{ dbName }}

  features:
    created_by:
      reference: system.user|c=创建人
      source: auth.user_auth.user_id
      fallback_value: '3d00af5b32054942a97a76d0e1f69ef4'
    updated_by:
      reference: system.user|c=修改人
      source: auth.user_auth.user_id
      fallback_value: '3d00af5b32054942a97a76d0e1f69ef4'

  entities:
    user_profile: person.personal_profile
    user: system.user
    ip_address: ip_address.ip_address

  data:
    init:
      - builtin_users_groups.data
      - builtin_users_groups.yml
      - country.sql
      - province.sql
      - city.sql
      - capital_city.sql
      - district.sql
      - isp.sql
      - ip_address.sql
    update:
      - truncate_on_update.sql
